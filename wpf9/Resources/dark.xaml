<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Wpf_7_8">
    <Style x:Key="Grid" TargetType = "Grid">
        <Setter Property="Background" Value="#808080" />
    </Style>
    <Style TargetType="DataGrid" x:Key="All">
        <Setter Property="Background" Value="#778899"></Setter>
        <Setter Property="Margin" Value="10,5,5,20"></Setter>
        <Setter Property="FontSize" Value="14"></Setter>
    </Style>
    <Style TargetType="DataGrid" x:Key="Names">
        <Setter Property="Background" Value="#808080t"></Setter>
    </Style>

    <SolidColorBrush x:Key="Menu" Color="#2F4F4F"/>


    <Style TargetType="MenuItem">
        <Setter Property="Cursor" Value="Hand"></Setter>
        <Setter Property="Background" Value="#2F4F4F"></Setter>

    </Style>
    <Style TargetType="ToolBar">
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="Height" Value="40"></Setter>
    </Style>
</ResourceDictionary>